<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="@string/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:id="@+id/title"/>

    <Button
        android:layout_width="220dp"
        android:layout_height="45dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/title"
        android:layout_centerHorizontal="true"
        android:background="#ff00d3ff"
        android:text="@string/spotify"
        android:onClick="sendMessage1"
        android:id="@+id/button1" />

    <Button
        android:layout_width="220dp"
        android:layout_height="45dp"
        android:layout_marginBottom="10dp"
        android:background="#ff00d3ff"
        android:text="@string/scores"
        android:onClick="sendMessage2"
        android:id="@+id/button2"
        android:layout_below="@+id/button1"
        android:layout_alignLeft="@+id/button1"
        android:layout_alignStart="@+id/button1" />/ >

    <Button
        android:layout_width="220dp"
        android:layout_height="45dp"
        android:layout_marginBottom="10dp"
        android:background="#ff00d3ff"
        android:text="@string/library"
        android:onClick="sendMessage3"
        android:id="@+id/button3"
        android:layout_below="@+id/button2"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2" />

    <Button
        android:layout_width="220dp"
        android:layout_height="45dp"
        android:layout_marginBottom="10dp"
        android:background="#ff00d3ff"
        android:text="@string/build"
        android:onClick="sendMessage4"
        android:id="@+id/button4"
        android:layout_below="@+id/button3"
        android:layout_alignLeft="@+id/button3"
        android:layout_alignStart="@+id/button3"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="220dp"
        android:layout_height="45dp"
        android:layout_marginBottom="10dp"
        android:background="#ff00d3ff"
        android:text="@string/xyz"
        android:onClick="sendMessage5"
        android:id="@+id/button5"
        android:layout_below="@+id/button4"
        android:layout_alignLeft="@+id/button4"
        android:layout_alignStart="@+id/button4" />

    <Button
        android:layout_width="220dp"
        android:layout_height="45dp"
        android:layout_marginBottom="10dp"
        android:background="#ff1eff00"
        android:text="@string/capstone"
        android:onClick="sendMessage6"
        android:id="@+id/button6"
        android:layout_below="@+id/button5"
        android:layout_alignLeft="@+id/button5"
        android:layout_alignStart="@+id/button5" />

</RelativeLayout>
