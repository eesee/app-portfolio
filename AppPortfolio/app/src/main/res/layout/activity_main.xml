<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="@string/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:id="@+id/title" />

    <Button style="@style/buttonBlue"
        android:layout_below="@id/title"
        android:layout_centerHorizontal="true"
        android:text="@string/spotify"
        android:onClick="sendSpotify"
        android:id="@+id/spotify" />

    <Button style="@style/buttonBlue"
        android:text="@string/scores"
        android:onClick="sendScores"
        android:id="@+id/scores"
        android:layout_below="@+id/spotify"
        android:layout_alignLeft="@+id/spotify"
        android:layout_alignStart="@+id/spotify" />

    <Button style="@style/buttonBlue"
        android:text="@string/library"
        android:onClick="sendLibrary"
        android:id="@+id/library"
        android:layout_below="@+id/scores"
        android:layout_alignLeft="@+id/scores"
        android:layout_alignStart="@+id/scores" />

    <Button style="@style/buttonBlue"
        android:text="@string/build"
        android:onClick="sendBuild"
        android:id="@+id/build"
        android:layout_below="@+id/library"
        android:layout_alignLeft="@+id/library"
        android:layout_alignStart="@+id/library" />

    <Button style="@style/buttonBlue"
        android:text="@string/xyz"
        android:onClick="sendXyz"
        android:id="@+id/xyz"
        android:layout_below="@+id/build"
        android:layout_alignLeft="@+id/build"
        android:layout_alignStart="@+id/build" />

    <Button style="@style/buttonGreen"
        android:text="@string/capstone"
        android:onClick="sendCapstone"
        android:id="@+id/capstone"
        android:layout_below="@+id/xyz"
        android:layout_alignLeft="@+id/xyz"
        android:layout_alignStart="@+id/xyz" />

</RelativeLayout>
